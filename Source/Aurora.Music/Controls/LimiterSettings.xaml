<ContentDialog
    x:Class="Aurora.Music.Controls.LimiterSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Aurora.Music.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Uid="LimiterDialog"
    Title="Limiter Settings"
    Background="{ThemeResource ContentDialogBackground}"
    CloseButtonText="Close"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light" Source="../Themes/Light.xaml" />
                <ResourceDictionary x:Key="Dark" Source="../Themes/Dark.xaml" />
            </ResourceDictionary.ThemeDictionaries>

            <local:EqualizerGainToolTipConverter x:Key="EqualizerGainToolTipConverter" />
        </ResourceDictionary>
    </ContentDialog.Resources>

    <StackPanel Orientation="Vertical">
        <Button
            x:Name="Reset"
            x:Uid="Reset"
            Margin="0,0,0,20"
            Click="Reset_Click"
            Content="Reset"
            Style="{ThemeResource TextBlockButtonStyle}" />
        <Slider
            x:Name="Attack"
            x:Uid="Attack"
            Header="Attack"
            Maximum="20"
            Minimum="1"
            StepFrequency="0.19"
            Style="{ThemeResource RoundSlider}" />
        <Slider
            x:Name="Release"
            x:Uid="Release"
            Header="Release"
            Maximum="20"
            Minimum="1"
            StepFrequency="0.19"
            Style="{ThemeResource RoundSlider}" />
        <Slider
            x:Name="Ratio"
            x:Uid="Ratio"
            Header="Ratio"
            Maximum="4"
            Minimum="0.1"
            StepFrequency="0.05"
            Style="{ThemeResource RoundSlider}" />
        <Slider
            x:Name="Gain"
            x:Uid="Gain"
            Header="Gain"
            Maximum="5"
            Minimum="-20"
            StepFrequency="0.25"
            Style="{ThemeResource RoundSlider}" />
        <Slider
            x:Name="Threshold"
            x:Uid="Threshold"
            Header="Threshold"
            Maximum="0"
            Minimum="-20"
            StepFrequency="0.2"
            Style="{ThemeResource RoundSlider}" />
    </StackPanel>
</ContentDialog>
